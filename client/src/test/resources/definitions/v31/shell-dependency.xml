<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<workflow-app xmlns="uri:oozie:workflow:0.3.1" name="test">
    <start to="shell-dependency"/>
    <action name="shell-dependency" check-interval="20000" external-action-condition="lamaApplicationId=-2;name=shell;endedRecent=10s">
        <shell>
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <exec>echo</exec>
            <argument>external-transition-dependency</argument>
            <capture-output dump="true"/>
            <capture-error dump="true"/>
        </shell>
        <ok to="end"/>
        <error to="fail"/>
    </action>
    <kill name="fail">
        <message>failed, error message[${wf:errorMessage(wf:lastErrorNode())}]</message>
    </kill>
    <end name="end"/>
</workflow-app>
