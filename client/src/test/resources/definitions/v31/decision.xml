<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<workflow-app xmlns="uri:oozie:workflow:0.3.1" name="test">
    <start to="mydecision"/>

    <decision name="mydecision">
        <switch>
            <case to="gt">
                ${abc gt 10}
            </case>
            <case to="lt">
                ${abc lt 100}
            </case>

            <default to="end"/>
        </switch>
    </decision>

    <action name="gt">
        <shell>
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <exec>echo</exec>
            <argument>abc is greater than 10</argument>
            <capture-output dump="true"/>
            <capture-error dump="true"/>
        </shell>
        <ok to="end"/>
        <error to="fail"/>
    </action>

    <action name="lt">
        <shell>
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <exec>echo</exec>
            <argument>abc is less than 100</argument>
            <capture-output dump="true"/>
            <capture-error dump="true"/>
        </shell>
        <ok to="end"/>
        <error to="fail"/>
    </action>

    <kill name="fail">
        <message>failed, error message[${wf:errorMessage(wf:lastErrorNode())}]</message>
    </kill>

    <end name="end"/>
</workflow-app>
